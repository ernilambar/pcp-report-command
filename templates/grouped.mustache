<section>
  <h2>Plugin Check Report</h2>
  <br><br>

  {{#categories}}
  <strong>## {{name}}</strong>
  <br><br>

  {{#types}}
  <strong>{{type}}: {{code}}</strong><br><br>
  {{#issues}}{{#is_single_file}}{{file}}{{#has_location}}:{{line}}{{/has_location}} - {{/is_single_file}}{{/issues}}{{message}}<br><br>

  {{#issues}}{{^is_single_file}}
  <pre><code>{{file}}{{#has_location}}:{{line}}{{/has_location}}</code></pre>
  {{/is_single_file}}{{/issues}}

  {{#docs}}
  <a href="{{docs}}" target="_blank">Learn more</a><br><br>
  {{/docs}}

  {{/types}}

  <br><br>
  {{/categories}}

  {{^categories}}
  <p>No issues found.</p>
  {{/categories}}
</section>
